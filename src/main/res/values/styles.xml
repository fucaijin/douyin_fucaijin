<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 底部栏的指示器元素根布局 -->
    <style name="indicatorItemRoot" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- 底部栏的指示器文字 -->
    <style name="indicatorItemText" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#C2BDBD</item>
        <!--<item name="android:layout_centerInParent">true</item>-->
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 底部栏的指示器消息通知小图标 -->
    <style name="indicatorItemNotifyText" >
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorNotifyText</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/yellow_circle_bg</item>
        <item name="android:visibility">gone</item>

    </style>

    <!-- 底部栏的指示器底部白色图案 -->
    <style name="indicatorItemNotifyImage" >
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!-- 底部栏的指示器底部白色图案 -->
    <style name="GrayTextSmall" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="right_menu_style">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">33dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
